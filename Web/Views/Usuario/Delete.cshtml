@model Infraestructure.Models.Usuario

@{
    ViewBag.Title = "Activar";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<hr/>
@if (Model.Activo == 1)
{


    <h2>Desactivar</h2>


    <h3>¿Está seguro que desea desactivarlo?</h3>
}
else
{
    <h2>Activar</h2>


    <h3>¿Está seguro que desea activarlo?</h3>
}


<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario1)
        </dd>

       
        <dt>
            @Html.DisplayNameFor(model => model.TipoUsuario.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoUsuario.Descripcion)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Guardar" class="btn btn-primary" /> |
            @Html.ActionLink("Regresar", "Index")
        </div>
    }
</div>
