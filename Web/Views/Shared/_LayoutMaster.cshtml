<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - POS</title>
    @Styles.Render("~/Content/css")
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">POS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    @if (Session["User"] != null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Facturar", "Index", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Artículos", "Index", "Articulo", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Usuarios", "Index", "Usuario", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                    }



                </ul>
                <ul>
                    @if (Session["User"] != null)
                    {
                        <li class="d-flex">
                        <li class="d-flex">
                            @Html.ActionLink("Salir", "Logout", "Login", null, new { @class = "text-info" })
                        </li>
                        </li>
                    }
                    else
                    {
                        <li class="d-flex">
                            @Html.ActionLink("Usuario", "Index", "Login", null, new { @class = "text-info" })
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>
    @RenderSection("footer", false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/sweetalert")
    @Scripts.Render("~/bundles/bootstrap-lux")
    @RenderSection("scripts", required: false)
</body>
</html>
