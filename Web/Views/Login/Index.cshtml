@model Infraestructure.Models.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Login", "Login"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.LabelFor(model => model.Usuario1, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-12">
            @Html.EditorFor(model => model.Usuario1, new { htmlAttributes = new { @class = "form-control-plaintext", @placeholder = "Ingrese su usuario" } })
            @Html.ValidationMessageFor(model => model.Usuario1, "", new { @class = "text-danger" })
        </div>
        
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Contrasennia, htmlAttributes: new { @class = "form-label mt-4" })
        @Html.PasswordFor(model => model.Contrasennia, new { @class = "form-control-plaintext", @placeholder = "Ingrese su contraseña" })
        @Html.ValidationMessageFor(model => model.Contrasennia, "", new { @class = "text-danger" })
    </div>
    <hr/>

    

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ingresar" class="btn btn-primary" />
        </div>
    </div>

}
